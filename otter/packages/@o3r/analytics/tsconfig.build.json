{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "src",
    "tsBuildInfoFile": "build/.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "src/**/fixtures/**/*.ts",
    "src/builders/**/*.ts",
    "src/helpers/**/*.ts"
  ]
}
