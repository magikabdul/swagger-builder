{
  "extends": "./tsconfig.build",
  "compilerOptions": {
    "tsBuildInfoFile": "build/shared.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "src/app-components*.ts",
    "src/app-components/**/*.ts",
    "src/extension/**/*.ts",
    "src/environments/**/*.ts",
    "src/app-devtools/**/*.ts"
  ]
}
